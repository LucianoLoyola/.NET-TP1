@page "/"
@using SGE.Repositorios
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
<PageTitle>Home</PageTitle>


<div class="row">
    <div class="col-12">
        <h2 class="fw-bolder">Bienvenido a <span class="text-danger">Aplicación</span></h2>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <NotAuthorized>
                    <span>No estás logeado. <a class="fw-bolder" href="/login">Click aquí</a> para ingresar</span>
                </NotAuthorized>
                <Authorized>
                    @if (user != null && user.Identity != null && user.Identity.IsAuthenticated)
                    {
                        <span>Sesión iniciada como <b>@user.Identity.Name</b>, <a class="fw-bolder" href="/logout">Click aquí</a> para cerrar tu sesión</span>
                    }
                </Authorized>
            </div>
        </div>
    </div>
</div>

@code {
    [CascadingParameter] private Task<AuthenticationState> authenticationStateTask { get; set; }
    private ClaimsPrincipal user;

    protected override async Task OnInitializedAsync()
    {
        var authState = await authenticationStateTask;
        user = authState.User;
    }
}